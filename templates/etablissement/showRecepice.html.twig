{% extends 'base.html.twig' %}
{% block content %}
    <div class="container-fluid">
        <div class="row justify-content-center">

            <div class="text-start w-75 pb-5">
                {{ message | raw }}
            </div>

            {{ form_start(form) }}

            <div class="d-inline-block w-auto align-middle">
                <div class="row p-3 border" style="background-color: #DADADA">
                    <h4 class="">L’ORGANISME DEMANDEUR</h4>
                </div>
                <div class="row border-left">
                    <div class="col-6">
                        {{ form_label(form.ipe) }}
                    </div>
                    <div class="col-6 p-0">
                        {{ form_widget(form.ipe) }}
                    </div>
                </div>
                <div class="row border-left">
                    <div class="col-6">
                        {{ form_label(form.finess) }}
                    </div>
                    <div class="col-6 p-0">
                        {{ form_widget(form.finess) }}
                    </div>
                </div>
                <div class="row border-left border-bottom">
                    <div class="col-6">
                        {{ form_label(form.raisonSocial) }}
                    </div>
                    <div class="col-6 p-0">
                        {{ form_widget(form.raisonSocial) }}
                    </div>
                </div>

                <div class="row p-3 mt-3 border" style="background-color: #DADADA">
                    <h4 class="">IDENTIFICATION DU RESPONSABLE LEGAL DE L’ORGANISME</h4>
                </div>
                <div class="row border-left border-bottom border-right">
                    <div class="col-2 border">
                        {{ form_label(form.civilite) }}
                    </div>
                    <div class="col-2 border px-0">
                        {{ form_widget(form.civilite) }}
                    </div>
                    <div class="col-2 border">
                        {{ form_label(form.prenom) }}
                    </div>
                    <div class="col-2 border px-0">
                        {{ form_widget(form.prenom) }}
                    </div>
                    <div class="col-2 border">
                        {{ form_label(form.nom) }}
                    </div>
                    <div class="col-2 px-0">
                        {{ form_widget(form.nom) }}
                    </div>
                    <div class="col-2 border">
                        {{ form_label(form.fonction) }}
                    </div>
                    <div class="col-10 px-0">
                        {{ form_widget(form.fonction) }}
                    </div>
                    <div class="col-2 border">
                        {{ form_label(form.courriel) }}
                    </div>
                    <div class="col-10 px-0">
                        {{ form_widget(form.courriel) }}
                    </div>
                </div>

                <div class="row p-3 mt-3 border" style="background-color:#B4C6E7">
                    <h4 class="">Autorisation Cnil d’accès aux données d’activité : MR005</h4>
                </div>
                <div class="row">
                    <div class="col-4 border">
                        {{ form_label(form.numeroRecepice) }}
                    </div>
                    <div class="col-8 px-0">
                        {{ form_widget(form.numeroRecepice) }}
                    </div>
                    <div class="col-4 border">
                        {{ form_label(form.dateAttribution) }}
                    </div>
                    <div class="col-8 px-0">
                        {{ form_widget(form.dateAttribution) }}
                    </div>
                    <div class="col-4 border">
                        {{ form_label(form.filePath) }}
                    </div>
                    <div class="col-8 px-0">
                        {{ form_widget(form.filePath) }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict'

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            let forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })();
    </script>
{% endblock %}
